# Environment Configuration Template
# Copy this file to .env and update values for your environment

# Environment and Deployment
# Options: local, development, production
ENVIRONMENT=local
DEBUG=True

# Database Configuration
# Local: DynamoDB Local (requires docker-compose)
# Production: DynamoDB (requires AWS credentials)
DATABASE_URL=dynamodb://localhost:8000

# Vector Store Configuration
# Local: Milvus (requires Docker Compose)
# Production: Zilliz Cloud
VECTOR_STORE_TYPE=milvus
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_DB_NAME=meal_planner

# Zilliz Cloud (only needed for production)
# ZILLIZ_API_KEY=your-api-key-here
# ZILLIZ_URI=https://your-cluster.zilliz.com

# LLM Configuration
# Local: Ollama (requires Docker or local installation)
# Production: AWS Bedrock
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:14b

# Bedrock Configuration (only needed for production)
# BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
# BEDROCK_REGION=us-east-1

# Embedding Configuration
# Local: Ollama
# Production: AWS Bedrock
EMBEDDING_PROVIDER=ollama
OLLAMA_EMBED_MODEL=nomic-embed-text

# Bedrock Embedding (only needed for production)
# BEDROCK_EMBED_MODEL_ID=amazon.titan-embed-text-v2:0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
